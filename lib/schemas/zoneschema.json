{
  "type": "object",
  "properties": {
    "zonepath": {"type":"string"},
    "brand": { "type": "string", "enum": ["sparse","ipkg","lipkg","lx"] },
    "ip-type": {"type": "string", "enum": ["exclusive"]},
    "autoboot": {"type": "boolean"},
    "net":{ 
	 "type":"array",
	 "items": {
	 "properties":
        {
            "physical": {"type":"string"},
            "address":  {"type": "string"},
            "netmask":  {"type":  "string"},
            "gateway": {"type": "string"}
        }
	}
    },
    "rctl": {
	    "type": "object",   
            "properties": {
             "max-physical-memory": {"type": "string"},
             "max-locked-memory": {"type": "string"},
	    "max-swap": {"type": "string"},
	    "dedicated-cpu": {"type": "string", "pattern": "^[1-9]-[1-9]$"},
	    "dedicated-cpu-importance": {"type": "string" , "pattern": "^[1-9]$" }
     }
    }
   }
}

